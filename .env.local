# ========================================
# LOCAL DEVELOPMENT PROFILE (CPU-optimized)
# ========================================
# Use this for local development on CPU
# Fast but lower quality embeddings

# Embeddings - Fast 384-dim model for CPU
EMBEDDING_BACKEND=sentence
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents

# LLM Configuration - Ollama (Local)
LLM_BACKEND=ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# AWS Endpoint Configuration (for future use after DPO training)
# LLM_BACKEND=aws_endpoint
# AWS_ENDPOINT_URL=https://your-model.sagemaker.us-east-1.amazonaws.com/invocations
# AWS_ENDPOINT_API_KEY=your-api-key-here
# AWS_ENDPOINT_MODEL_NAME=custom-support-model-dpo-v1

# HuggingFace Endpoint Configuration (alternative)
# LLM_BACKEND=huggingface_endpoint
# HUGGINGFACE_ENDPOINT_URL=https://your-endpoint.aws.endpoints.huggingface.cloud
# HUGGINGFACE_API_TOKEN=hf_xxxxxxxxxxxxx
# HUGGINGFACE_MODEL_NAME=custom-support-model

# RAG Parameters
TOP_K_RESULTS=6
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAGAS Configuration
RAGAS_LLM_BACKEND=heuristic  # Fast heuristic mode for local

# RabbitMQ
RABBITMQ_URL=amqp://rlvr:rlvr_password@localhost:5672/

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rlvr_db
POSTGRES_USER=rlvr_user
POSTGRES_PASSWORD=rlvr_password

# Services
API_GATEWAY_URL=http://localhost:8000
QA_ORCHESTRATOR_URL=http://localhost:8001
DOCUMENT_INGESTION_URL=http://localhost:8002
TRAINING_DATA_SERVICE_URL=http://localhost:8005
GROUND_TRUTH_SERVICE_URL=http://localhost:8007

