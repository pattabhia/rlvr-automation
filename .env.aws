# ========================================
# AWS PRODUCTION PROFILE (Custom Model)
# ========================================
# Use this after training your custom model with DPO
# Points to AWS SageMaker/Inference endpoint

# Embeddings - High-quality 768-dim model
EMBEDDING_BACKEND=sentence
EMBEDDING_MODEL=sentence-transformers/multi-qa-mpnet-base-dot-v1
EMBEDDING_DIMENSION=768

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents

# LLM Configuration - AWS Custom Endpoint
LLM_BACKEND=aws_endpoint  # Custom AWS endpoint
AWS_ENDPOINT_URL=https://your-model.sagemaker.us-east-1.amazonaws.com/invocations
AWS_ENDPOINT_API_KEY=your-api-key-here
AWS_ENDPOINT_MODEL_NAME=custom-support-model-dpo-v1

# Alternative: HuggingFace Inference Endpoint
# LLM_BACKEND=huggingface_endpoint
# HUGGINGFACE_ENDPOINT_URL=https://your-endpoint.aws.endpoints.huggingface.cloud
# HUGGINGFACE_API_TOKEN=hf_xxxxxxxxxxxxx

# RAG Parameters
TOP_K_RESULTS=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAGAS Configuration
RAGAS_LLM_BACKEND=aws_endpoint  # Use same custom model for RAGAS

# RabbitMQ
RABBITMQ_URL=amqp://rlvr:rlvr_password@rabbitmq:5672/

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rlvr_db
POSTGRES_USER=rlvr_user
POSTGRES_PASSWORD=rlvr_password

# Services
API_GATEWAY_URL=http://api-gateway:8000
QA_ORCHESTRATOR_URL=http://qa-orchestrator:8001
DOCUMENT_INGESTION_URL=http://document-ingestion:8002
TRAINING_DATA_SERVICE_URL=http://training-data:8005
GROUND_TRUTH_SERVICE_URL=http://ground-truth:8007

